@{
    ViewData["Title"] = "CRM Details";
    ViewData["PageCss"] = "crm-details.css";
}

<!-- Header -->
<div class="mt-5"  style=""></div>


<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-pattern"></div>
    <div class="hero-glow-1"></div>
    <div class="hero-glow-2"></div>
    <div class="container">
        <div class="hero-content">
            <h1>Comprehensive <span class="gradient-text">CRM Solution</span></h1>
            <p class="hero-subtitle">Discover how Vexora Labs CRM can revolutionize your business operations and customer relationships with our feature-rich platform.</p>
            <div class="hero-cta">
                <a href="/Home/UserForm" class="btn btn-gradient btn-lg">Schedule Demo</a>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="detailed-features-section">
    <div class="container">
        <div class="section-header">
            <h2>Detailed Features</h2>
            <p>Our CRM solution is packed with features designed to help you manage customer relationships effectively.</p>
        </div>
        <div class="features-grid">
            <div class="detailed-feature">
                <div class="feature-icon">
                    <i class="fas fa-users"></i>
                </div>
                <h3>Advanced Contact Management</h3>
                <p>Organize contacts with custom fields, tags, and segmentation. Track every interaction and maintain comprehensive customer profiles.</p>
                <ul class="feature-list">
                    <li><i class="fas fa-check-circle"></i> Custom contact fields</li>
                    <li><i class="fas fa-check-circle"></i> Contact segmentation</li>
                    <li><i class="fas fa-check-circle"></i> Interaction history</li>
                    <li><i class="fas fa-check-circle"></i> Automated contact enrichment</li>
                    <li><i class="fas fa-check-circle"></i> Duplicate detection</li>
                </ul>
            </div>
            <div class="detailed-feature">
                <div class="feature-icon">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <h3>Comprehensive Analytics</h3>
                <p>Make data-driven decisions with our powerful analytics tools. Track performance metrics and identify growth opportunities.</p>
                <ul class="feature-list">
                    <li><i class="fas fa-check-circle"></i> Real-time dashboards</li>
                    <li><i class="fas fa-check-circle"></i> Custom reports</li>
                    <li><i class="fas fa-check-circle"></i> Sales forecasting</li>
                    <li><i class="fas fa-check-circle"></i> Performance metrics</li>
                    <li><i class="fas fa-check-circle"></i> Export capabilities</li>
                </ul>
            </div>
            <div class="detailed-feature">
                <div class="feature-icon">
                    <i class="fas fa-comment-dots"></i>
                </div>
                <h3>Unified Communication</h3>
                <p>Stay connected with your customers through integrated communication channels. Track all conversations in one place.</p>
                <ul class="feature-list">
                    <li><i class="fas fa-check-circle"></i> Email integration</li>
                    <li><i class="fas fa-check-circle"></i> SMS messaging</li>
                    <li><i class="fas fa-check-circle"></i> Call tracking</li>
                    <li><i class="fas fa-check-circle"></i> Chat functionality</li>
                    <li><i class="fas fa-check-circle"></i> Communication templates</li>
                </ul>
            </div>
            <div class="detailed-feature">
                <div class="feature-icon">
                    <i class="fas fa-database"></i>
                </div>
                <h3>Robust Data Management</h3>
                <p>Store and access customer data securely. Import and export data with ease and maintain data integrity.</p>
                <ul class="feature-list">
                    <li><i class="fas fa-check-circle"></i> Secure data storage</li>
                    <li><i class="fas fa-check-circle"></i> Data import/export</li>
                    <li><i class="fas fa-check-circle"></i> Data validation</li>
                    <li><i class="fas fa-check-circle"></i> Backup and recovery</li>
                    <li><i class="fas fa-check-circle"></i> Data migration tools</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- Timeline Section -->
<section class="timeline-section">
    <div class="timeline-bg"></div>
    <div class="timeline-glow"></div>
    <div class="container">
        <div class="section-header">
            <h2>Implementation Timeline</h2>
            <p>Get your CRM up and running quickly with our streamlined implementation process.</p>
        </div>
        <div class="timeline">
            <div class="timeline-line"></div>
            <div class="timeline-item timeline-item-right">
                <div class="timeline-marker">1</div>
                <div class="timeline-content">
                    <h3>Initial Consultation</h3>
                    <p>We'll discuss your business needs and goals to customize the CRM solution.</p>
                    <div class="timeline-duration">
                        <i class="fas fa-clock"></i>
                        <span>1-2 days</span>
                    </div>
                </div>
            </div>
            <div class="timeline-item timeline-item-left">
                <div class="timeline-marker">2</div>
                <div class="timeline-content">
                    <h3>Data Migration</h3>
                    <p>We'll help you migrate your existing customer data to the new CRM system.</p>
                    <div class="timeline-duration">
                        <i class="fas fa-clock"></i>
                        <span>3-5 days</span>
                    </div>
                </div>
            </div>
            <div class="timeline-item timeline-item-right">
                <div class="timeline-marker">3</div>
                <div class="timeline-content">
                    <h3>Configuration & Customization</h3>
                    <p>We'll configure the CRM to match your business processes and workflows.</p>
                    <div class="timeline-duration">
                        <i class="fas fa-clock"></i>
                        <span>5-7 days</span>
                    </div>
                </div>
            </div>
            <div class="timeline-item timeline-item-left">
                <div class="timeline-marker">4</div>
                <div class="timeline-content">
                    <h3>Training & Onboarding</h3>
                    <p>We'll train your team on how to use the CRM effectively.</p>
                    <div class="timeline-duration">
                        <i class="fas fa-clock"></i>
                        <span>2-3 days</span>
                    </div>
                </div>
            </div>
            <div class="timeline-item timeline-item-right">
                <div class="timeline-marker">5</div>
                <div class="timeline-content">
                    <h3>Go Live & Support</h3>
                    <p>We'll launch your CRM and provide ongoing support to ensure success.</p>
                    <div class="timeline-duration">
                        <i class="fas fa-clock"></i>
                        <span>Ongoing</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- CTA Section -->
<section class="cta-section cta-alt">
    <div class="container">
        <div class="cta-container">
            <div class="cta-content">
                <h2>Ready to Transform Your Customer Relationships?</h2>
                <p>Join hundreds of businesses that have already improved their operations with Vexora Labs CRM.</p>
                <div class="cta-buttons">
                    <a href="/Home/UserForm" class="btn btn-outline-light btn-lg">Start working on your CRM Right now</a>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <script src="~/js/crm-details.js"></script>
}