<!-- Contact Section -->
<section id="contact" class="contact-section">
    <div class="section-bg"></div>
    <div class="section-glow"></div>
    <div class="container">
        <div class="section-header">
            <h2>Ready to Transform Your Business with <span class="gradient-text">Odoo</span>?</h2>
            <p>Contact us for a free consultation and personalized demo</p>
        </div>
        <div class="contact-container">
            <div class="contact-form-container">
                <form class="contact-form">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="name">Full Name</label>
                            <input type="text" id="name" class="form-control" placeholder="Your Name" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <input type="email" id="email" class="form-control" placeholder="Your Email" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="company">Company Name</label>
                            <input type="text" id="company" class="form-control" placeholder="Your Company">
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone Number</label>
                            <input type="tel" id="phone" class="form-control" placeholder="Your Phone">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="industry">Industry</label>
                        <select id="industry" class="form-control" required>
                            <option value="" selected disabled>Select Your Industry</option>
                            <option value="manufacturing">Manufacturing</option>
                            <option value="retail">Retail & Distribution</option>
                            <option value="healthcare">Healthcare</option>
                            <option value="finance">Financial Services</option>
                            <option value="education">Education</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="services">Services of Interest</label>
                        <select id="services" class="form-control" required>
                            <option value="" selected disabled>Select Service</option>
                            <option value="deployment">Odoo Deployment</option>
                            <option value="customization">Odoo Customization</option>
                            <option value="integration">Odoo Integration</option>
                            <option value="migration">Odoo Migration</option>
                            <option value="support">Odoo Support</option>
                            <option value="training">Odoo Training</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="message">Project Details</label>
                        <textarea id="message" class="form-control" rows="5" placeholder="Tell us about your project requirements"></textarea>
                    </div>
                    <div class="form-group checkbox">
                        <input type="checkbox" id="consent" required>
                        <label for="consent">I agree to the <a href="#">Privacy Policy</a> and consent to being contacted regarding my request.</label>
                    </div>
                    <button type="submit" class="btn btn-gradient btn-block">Request Consultation</button>
                </form>
            </div>
            <div class="contact-info">
                <div class="info-card">
                    <div class="info-icon">
                        <i class="fas fa-phone-alt"></i>
                    </div>
                    <div class="info-content">
                        <h3>Call Us</h3>
                        <p>+1 (800) 123-4567</p>
                        <p>Monday - Friday, 9am - 6pm EST</p>
                    </div>
                </div>
                <div class="info-card">
                    <div class="info-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="info-content">
                        <h3>Email Us</h3>
                        <p>odoo@yourcompany.com</p>
                        <p>support@yourcompany.com</p>
                    </div>
                </div>
                <div class="info-card">
                    <div class="info-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="info-content">
                        <h3>Visit Us</h3>
                        <p>123 Business Avenue</p>
                        <p>New York, NY 10001</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

