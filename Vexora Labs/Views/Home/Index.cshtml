<!-- Contact Section -->
<section id="contact" class="section section-dark-alt">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="section-header">
                    <h6 class="text-gradient text-uppercase fw-bold">Contact Us</h6>
                    <h2 class="section-title">Get In Touch</h2>
                    <div class="divider"></div>
                </div>

                <p class="mb-4">Ready to start your next project? Contact us today to discuss how Vexora Labs can help transform your ideas into reality.</p>

                <div class="contact-info">
                    <div class="contact-info-item">
                        <div class="contact-info-icon">
