@page

                    
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout="~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<div class="login-container">
    <div class="">
        <div class="login-header">
            <h2>Welcome Back</h2>
            <p>Please sign in to continue</p>
        </div>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            
            <div class="form-group">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            
            <div class="form-options">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        Remember me
                    </label>
                </div>
                <div>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                </div>
            </div>
            
            <div class="form-group">
                <button id="login-submit" type="submit" class="btn btn-primary btn-block">Sign in</button>
            </div>
            
            <div class="divider">
                <span>OR</span>
            </div>
            
        
        </form>


        <div class="social-login">
            <form method="post" asp-page-handler="ExternalLogin" asp-route-provider="Google" asp-route-returnUrl="@Model.ReturnUrl">
                <button type="submit" class="btn btn-social btn-google">
                    <i class="fab fa-google"></i> Sign in with Google
                </button>
            </form>

            <button type="button" class="btn btn-social btn-github">
                <i class="fab fa-github"></i> Sign in with GitHub
            </button>
        </div>
     

        <div class="login-footer">
            <p>Don't have an account? <a asp-page="./Register">Sign up</a></p>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

